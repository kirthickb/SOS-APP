{
  "expo": {
    "name": "sos-app",
    "slug": "sos-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "sosapp",
    "userInterfaceStyle": "automatic",

    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.nishanth21.sosapp",
      "config": {
        "googleMapsApiKey": "AIzaSyAlM6ydnd7-cE7Y9YSqLoF7G4iHWk0Sl8k"
      },
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "This app needs access to your location to send emergency SOS alerts with your current coordinates.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "This app needs access to your location to track ambulance and provide real-time navigation.",
        "NSMicrophoneUsageDescription": "This app needs access to your microphone to enable voice-based emergency SOS triggering.",
        "NSSpeechRecognitionUsageDescription": "This app needs speech recognition to detect emergency keywords for automatic SOS alerts."
      }
    },

    "android": {
      "package": "com.nishanth21.sosapp",
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "RECORD_AUDIO",
        "FOREGROUND_SERVICE"
      ],
      "config": {
        "googleMaps": {
          "apiKey": "AIzaSyAlM6ydnd7-cE7Y9YSqLoF7G4iHWk0Sl8k"
        }
      },
      "adaptiveIcon": {
        "backgroundColor": "#E6F4FE",
        "foregroundImage": "./assets/images/android-icon-foreground.png",
        "backgroundImage": "./assets/images/android-icon-background.png",
        "monochromeImage": "./assets/images/android-icon-monochrome.png"
      }
    },

    "plugins": [
      "expo-speech-recognition",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ]
    ],

    "experiments": {
      "reactCompiler": true,
      "newArchEnabled": true
    }
  }
}
