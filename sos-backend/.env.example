# SOS-APP Backend Environment Configuration
# Copy this to .env and update with your values
# NEVER commit .env file to git repository

# ============================================
# DATABASE CONFIGURATION
# ============================================
DB_URL=jdbc:mysql://localhost:3306/sos_app_db
DB_USERNAME=root
DB_PASSWORD=root

# ============================================
# JWT CONFIGURATION
# ============================================
# Generate with: openssl rand -base64 32
# MUST be at least 256 bits (32 bytes when base64 decoded)
JWT_SECRET=YOUR_VERY_SECURE_BASE64_ENCODED_SECRET_KEY_HERE_MIN_256_BITS
JWT_EXPIRATION=3600000
JWT_REFRESH_EXPIRATION=604800000

# ============================================
# CORS CONFIGURATION
# ============================================
# Comma-separated list of allowed origins
# Change to your production frontend URL
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080,http://localhost:8081,http://192.168.1.100:8081

# ============================================
# WEBSOCKET CONFIGURATION
# ============================================
# Comma-separated list of allowed WebSocket origins
WEBSOCKET_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080,http://localhost:8081

# ============================================
# SSL/TLS CONFIGURATION
# ============================================
# Enable HTTPS in production
SSL_ENABLED=false
SSL_KEYSTORE_PATH=/path/to/keystore.p12
SSL_KEYSTORE_PASSWORD=your_keystore_password

# ============================================
# DEVELOPMENT CONFIGURATION
# ============================================
# Disable in production
DEVTOOLS_ENABLED=true

# ============================================
# LOGGING CONFIGURATION
# ============================================
# Options: DEBUG, INFO, WARN, ERROR
LOGGING_LEVEL=INFO

# ============================================
# PORT CONFIGURATION
# ============================================
PORT=8080

